<div class="container mx-auto w-full min-h-screen px-8 py-14">
  <%= form_with model: @review do |f| %>
    <div class="flex justify-center space-x-32">
      <div>
        <%= image_tag asset_path("image.png"), class: "object-contain w-80 h-80 rounded-md bg-zinc-200" %>
        
        <div class="py-5">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>
      </div>

      <div class="w-96 h-96">
        <div class="my-5">
          <%= f.label :maker%>
          <%= f.text_field :maker %>
        </div>
        <div class="my-5">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="my-5">
          <%= f.label :rating %>
          <div class="rating">
            <%= f.radio_button :rating, 0, class: "rating-hidden", checked: true %>
            <%= f.radio_button :rating, 1, class: "mask mask-star bg-orange-400" %>
            <%= f.radio_button :rating, 2, class: "mask mask-star bg-orange-400" %>
            <%= f.radio_button :rating, 3, class: "mask mask-star bg-orange-400" %>
            <%= f.radio_button :rating, 4, class: "mask mask-star bg-orange-400" %>
            <%= f.radio_button :rating, 5, class: "mask mask-star bg-orange-400" %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col my-10">
      <%= f.text_area :body, class: "textarea textarea-bordered min-h-96 w-3/4 mx-auto", placeholder: "レビュー" %>
      <div class="mx-auto my-10">
        <%= f.submit "投稿する", class: "btn stone-300" %>
      </div>
    </div>
  <% end %>
</div>